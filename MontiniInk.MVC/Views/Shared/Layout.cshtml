  <!-- Social Media Icons CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


  <title>@ViewData["Title"]</title>
  <style type="text/css">

  

    body
    {
      
      background:#FFFFF0;
    }
    .event
    {
      clear: both;
      display: block;
      font-size: 13px;
