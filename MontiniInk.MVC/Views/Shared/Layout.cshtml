    }

    .event-desc
    {
      color: #666;
      margin: 3px 0 7px 0;
      text-decoration: none;	
    }

    .fa 
    {
      
      font-size: 30px;
      width: 30px;
      text-align: center;
      text-decoration: none;
      border-radius: 50%;
    }
    
