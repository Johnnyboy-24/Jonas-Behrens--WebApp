@{
    Layout= "Layout";
    ViewData["Title"]= "Login";
    
}

@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using MontiniInk.Model
@model LoginModel 


<form style="margin:10px;" method="POST" asp-controller="Authentication" asp-action="CheckCredentials">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label asp-for="Email" >Email-Adresse:</label>
        <input  class="form-control" asp-for="Email" >
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Passwort" >Passwort:</label>
        <input class="form-control" type="password" asp-for="Passwort" />
        <span asp-validation-for="Passwort"></span>
    </div> 
    <button style="margin-top: 10px;" type="submit" class="btn btn-primary">Submit</button>
</form>
